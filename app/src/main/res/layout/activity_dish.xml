<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DishActivity">
    <ImageButton
        android:id="@+id/btn_activity_dish_back"
        style="@style/BackButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <ImageButton
        android:id="@+id/btn_activity_dish_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_md_favorite_border"
        android:layout_marginEnd="@dimen/dimen_20"
        app:layout_constraintTop_toTopOf="@id/btn_activity_dish_back"
        app:layout_constraintBottom_toBottomOf="@+id/btn_activity_dish_back"
        app:layout_constraintRight_toLeftOf="@+id/btn_activity_dish_join"
        />
    <com.example.gobishops.myview.mButtonView
        android:id="@+id/btn_activity_dish_join"
        android:text="@string/join"
        android:textColor="@color/colorPrimary"
        android:layout_marginEnd="@dimen/dimen_20"
        style="@style/SmallButton"
        app:layout_constraintTop_toTopOf="@+id/btn_activity_dish_back"
        app:layout_constraintBottom_toBottomOf="@+id/btn_activity_dish_back"
        app:layout_constraintRight_toLeftOf="@+id/btn_activity_dish_share"
        />
    <ImageButton
        android:id="@+id/btn_activity_dish_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_share_24"
        android:layout_marginEnd="@dimen/dimen_20"
        app:layout_constraintTop_toTopOf="@id/btn_activity_dish_back"
        app:layout_constraintBottom_toBottomOf="@+id/btn_activity_dish_back"
        app:layout_constraintRight_toRightOf="parent"
        />
    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/iv_activity_dish_portrait"
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:layout_marginStart="@dimen/dimen_20"
        app:layout_constraintTop_toTopOf="@+id/btn_activity_dish_back"
        app:layout_constraintBottom_toBottomOf="@+id/btn_activity_dish_back"
        app:layout_constraintLeft_toRightOf="@+id/btn_activity_dish_back"
        app:sriv_oval="true"
        />
    <TextView
        android:id="@+id/tv_activity_dish_initiator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_30"
        android:layout_marginStart="@dimen/dimen_20"
        android:text="@string/visitor"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/btn_activity_dish_back"
        app:layout_constraintBottom_toBottomOf="@+id/btn_activity_dish_back"
        app:layout_constraintLeft_toRightOf="@+id/iv_activity_dish_portrait"
        />

    <com.example.gobishops.myview.mImageView
        android:id="@+id/iv_activity_dish_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_200"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_20"
        android:src="@drawable/img_sushi"
        android:layout_marginTop="@dimen/dimen_20"
        app:layout_constraintTop_toBottomOf="@+id/btn_activity_dish_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:id="@+id/iv_activity_dish_location"
        android:layout_width="@dimen/button_length_small"
        android:layout_height="@dimen/button_length_small"
        android:background="@drawable/ic_baseline_house_24"
        android:layout_marginTop="@dimen/dimen_10"
        app:layout_constraintTop_toBottomOf="@+id/iv_activity_dish_image"
        app:layout_constraintLeft_toLeftOf="@+id/iv_activity_dish_image"
        />
    <TextView
        android:id="@+id/tv_activity_dish_location"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_30"
        android:text="@string/f_location"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/dimen_10"
        app:layout_constraintTop_toTopOf="@+id/iv_activity_dish_location"
        app:layout_constraintLeft_toRightOf="@+id/iv_activity_dish_location"
        />
    <ImageView
        android:id="@+id/iv_activity_dish_time"
        android:layout_width="@dimen/button_length_small"
        android:layout_height="@dimen/button_length_small"
        android:background="@drawable/ic_baseline_monetization_on_24"
        android:layout_marginTop="@dimen/dimen_10"
        app:layout_constraintTop_toBottomOf="@+id/iv_activity_dish_location"
        app:layout_constraintLeft_toLeftOf="@+id/iv_activity_dish_image"
        />

    <TextView
        android:id="@+id/tv_activity_dish_price"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_30"
        android:text="@string/f_price"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/dimen_10"
        app:layout_constraintTop_toTopOf="@+id/iv_activity_dish_time"
        app:layout_constraintLeft_toRightOf="@+id/iv_activity_dish_time"
        />

    <ImageView
        android:id="@+id/iv_activity_dish_description"
        android:layout_width="@dimen/button_length_small"
        android:layout_height="@dimen/button_length_small"
        android:background="@drawable/ic_baseline_list_alt_24"
        android:layout_marginTop="@dimen/dimen_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_activity_dish_price"
        app:layout_constraintLeft_toLeftOf="@+id/iv_activity_dish_image"
        />
    <TextView
        android:id="@+id/tv_activity_dish_description"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_30"
        android:text="@string/hint_description"
        android:textColor="@color/gray_2"
        android:textSize="@dimen/text_size_sub_title"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/dimen_10"
        app:layout_constraintTop_toTopOf="@+id/iv_activity_dish_description"
        app:layout_constraintLeft_toRightOf="@+id/iv_activity_dish_description"
        />
    <ImageView
        android:id="@+id/iv_activity_dish_type"
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:background="@drawable/ic_baseline_map_24"
        android:layout_marginTop="@dimen/dimen_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_activity_dish_description"
        app:layout_constraintLeft_toLeftOf="@+id/iv_activity_dish_image"
        />
    <TextView
        android:id="@+id/tv_activity_dish_map"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_30"
        android:text="@string/map"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/dimen_10"
        app:layout_constraintTop_toTopOf="@+id/iv_activity_dish_type"
        app:layout_constraintLeft_toRightOf="@+id/iv_activity_dish_type"
        />
    <RelativeLayout
        android:id="@+id/rl_activity_dish"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_150"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_20"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_20"
        android:background="@drawable/shape_boarder_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/iv_activity_dish_type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <fragment
            android:id="@+id/fragment_activity_dish_map"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_margin="@dimen/dimen_2"
            tools:context=".view.DishActivity" />
    </RelativeLayout>

    <com.royrodriguez.transitionbutton.TransitionButton
        android:id="@+id/btn_activity_dish_add"
        android:layout_width="@dimen/button_width_middle"
        android:layout_height="@dimen/button_length_middle"
        android:text="@string/add_to_cart"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginBottom="@dimen/dimen_10"
        app:layout_constraintTop_toBottomOf="@+id/rl_activity_dish"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:defaultColor="#7926A9"
        app:loaderColor="#ffffff"
        />

</androidx.constraintlayout.widget.ConstraintLayout>