<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:layerType="software"
    tools:context=".view.EventSearchActivity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_activity_event_search_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_activity_event_search_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65"
        />
    <View
        android:id="@+id/view_activity_event_search_bk"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_220"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageButton
        android:id="@+id/btn_activity_event_search_back"
        android:background="@drawable/ic_baseline_arrow_back_24_white"
        android:layout_marginTop="@dimen/dimen_20"
        style="@style/BackButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tv_activity_event_search_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_history"
        android:textSize="@dimen/text_size_sub_logo"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_10"
        app:layout_constraintTop_toBottomOf="@+id/btn_activity_event_search_back"
        app:layout_constraintLeft_toLeftOf="@+id/btn_activity_event_search_back"
        />

    <!-- activity_screen_slide.xml -->
