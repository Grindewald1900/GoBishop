<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_60">
    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/iv_chat_portrait_left"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginStart="@dimen/dimen_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:sriv_oval="true"
        app:sriv_border_width="@dimen/dimen_2"
        app:sriv_border_color="@color/colorPrimary"
        />


    <TextView
        android:id="@+id/tv_chat_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/f_location"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_chat_time"
        app:layout_constraintLeft_toRightOf="@id/iv_chat_portrait_left"
        app:layout_constraintRight_toLeftOf="@id/iv_chat_portrait_right"
        />
    <TextView
        android:id="@+id/tv_chat_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/f_time"
        android:layout_marginStart="@dimen/dimen_20"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_chat_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_chat_portrait_left"
        app:layout_constraintRight_toLeftOf="@id/iv_chat_portrait_right"
        />

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/iv_chat_portrait_right"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginEnd="@dimen/dimen_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:sriv_oval="true"
        app:sriv_border_width="@dimen/dimen_2"
        app:sriv_border_color="@color/colorPrimary"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
