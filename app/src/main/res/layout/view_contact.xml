<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_80">
    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/btn_view_contact_portrait"
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginStart="@dimen/dimen_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:sriv_oval="true"
        app:sriv_border_width="@dimen/dimen_2"
        app:sriv_border_color="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/tv_view_contact_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_view_contact_message"
        app:layout_constraintLeft_toRightOf="@id/btn_view_contact_portrait"
        />

    <TextView
        android:id="@+id/tv_view_contact_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Yep, I have some..."
        app:layout_constraintTop_toTopOf="@id/tv_view_contact_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_view_contact_name"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
