<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextHomePage" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/shape_board</item>
        <item name="android:paddingStart">@dimen/dimen_10</item>
        <item name="android:paddingEnd">@dimen/dimen_10</item>
        <item name="android:paddingTop">@dimen/dimen_10</item>
    </style>

    <style name="SearchBox" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/shape_board</item>
        <item name="android:paddingStart">@dimen/dimen_10</item>
        <item name="android:paddingEnd">@dimen/dimen_10</item>
    </style>

    <style name="BackButton">
        <item name="android:background">@drawable/ic_back_24</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_20</item>
        <item name="android:layout_marginTop">@dimen/dimen_20</item>
    </style>

</resources>